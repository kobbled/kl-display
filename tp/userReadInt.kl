PROGRAM userReadInt
%NOBUSYLAMP
%NOLOCKGROUP

VAR
	out_reg : INTEGER
	prompt_msg : STRING[32]
%from tpe.klh %import get_string_arg,get_int_arg
%from registers.klh %import set_int
%from display.klh %import input_int

BEGIN
	prompt_msg = tpe__get_string_arg(1)
	out_reg = tpe__get_int_arg(2)
	registers__set_int(out_reg, display__input_int(prompt_msg))
END userReadInt